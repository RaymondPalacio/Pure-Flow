<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders</title>
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300..800&family=Playfair+Display:wght@400..900&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Custom Styles -->
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            background-color: #f4f7fc;
            margin: 0;
            padding: 0;
        }

        .sidebar {
            height: 100vh;
            width: 80px;
            position: fixed;
            top: 0;
            left: 0;
            background: linear-gradient(180deg, white, #4361EE);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-right: 1px solid rgba(255, 255, 255, 0.3);
            padding: 10px 0;
            overflow-x: hidden;
            transition: width 0.3s ease;
            z-index: 1000;
        }

        .sidebar:hover {
            width: 250px;
        }

        .container {
            margin-left: 80px;
            transition: margin-left 0.3s ease;
        }

        .sidebar:hover + .container {
            margin-left: 250px;
        }

        .sidebar .navbar-brand,
        .sidebar .nav-link span {
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }

        .sidebar:hover .navbar-brand,
        .sidebar:hover .nav-link span {
            opacity: 1;
            visibility: visible;
        }

        .sidebar .navbar-brand {
            font-family: 'Playfair Display', serif;
            color: #000000;
            font-size: 1.5rem;
            text-align: center;
            margin-bottom: 30px;
            text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
        }

        .sidebar .nav-link {
            color: #000000;
            font-size: 1rem;
            margin: 15px 0;
            display: flex;
            align-items: center;
            padding: 10px;
            transition: padding-left 0.3s ease, background-color 0.3s ease;
            text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
        }

        .sidebar .nav-link i {
            font-size: 1.5rem;
            width: 30px;
            text-align: center;
        }

        .sidebar .nav-link:hover {
            background: rgba(11, 11, 215, 0.5);
            border-radius: 5px;
        }

        .main-content {
            padding: 20px;
        }

        .main-content h1 {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            color: #003f7d;
        }

        .order-list {
            list-style: none;
            padding: 0;
        }

        .order-item {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 15px;
            border: 1px solid #d1e7f5;
        }

        .item-list {
            list-style: none;
            padding-left: 20px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <a class="navbar-brand" href="/clientdashboard">
            <i class="fas fa-hand-holding-water me-3"></i><span>Pure Flow</span>
        </a>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="/clientdashboard"><i class="fas fa-tachometer-alt"></i><span> Dashboard</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/cart"><i class="fas fa-shopping-cart"></i><span> My Orders</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/profile"><i class="fas fa-user-circle"></i><span> Profile</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/settings"><i class="fas fa-cogs"></i><span> Settings</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/logout"><i class="fas fa-door-open"></i><span> Logout</span></a>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <div class="container main-content">
        <h1>My Orders</h1>
        <ul class="order-list">
            <% orders.forEach(order => { %>
                <li class="order-item">
                    <strong>Order ID:</strong> <%= order._id %> <br>
                    <strong>Status:</strong> <%= order.status %> <br>
                    <strong>Items:</strong>
                    <ul class="item-list">
                        <% order.items.forEach(item => { %>
                            <li>
                                <%= item.name %> - <%= item.quantity %> @ <%= item.price %> each
                            </li>
                        <% }) %>
                    </ul>
                    <strong>Total:</strong> <%= order.totalAmount %> <br>
                    <strong>Placed on:</strong> <%= order.createdAt.toDateString() %>
                </li>
            <% }) %>
        </ul>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
