    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Your Cart</title>

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300..800&family=Playfair+Display:wght@400..900&display=swap" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">

        <!-- Bootstrap -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

        <!-- Custom Styles -->
        <style>
            body {
                font-family: 'Open Sans', sans-serif;
                background-color: #f4f7fc;
                margin: 0;
                padding: 0;
            }

            .sidebar {
                height: 100vh;
                width: 80px;
                position: fixed;
                top: 0;
                left: 0;
                background: linear-gradient(180deg, white, #4361EE);
                box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
                backdrop-filter: blur(10px);
                -webkit-backdrop-filter: blur(10px);
                border-right: 1px solid rgba(255, 255, 255, 0.3);
                padding: 10px 0;
                overflow-x: hidden;
                transition: width 0.3s ease;
                z-index: 1000;
            }

            .sidebar:hover {
                width: 250px;
            }

            .container {
                margin-left: 80px;
                transition: margin-left 0.3s ease;
            }

            .sidebar:hover + .container {
                margin-left: 250px;
            }

            .sidebar .navbar-brand,
            .sidebar .nav-link span {
                opacity: 0;
                visibility: hidden;
                transition: opacity 0.3s ease, visibility 0.3s ease;
            }

            .sidebar:hover .navbar-brand,
            .sidebar:hover .nav-link span {
                opacity: 1;
                visibility: visible;
            }

            .sidebar .navbar-brand {
                font-family: 'Playfair Display', serif;
                color: #000000;
                font-size: 1.5rem;
                text-align: center;
                margin-bottom: 30px;
                text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
            }

            .sidebar .nav-link {
                color: #000000;
                font-size: 1rem;
                margin: 15px 0;
                display: flex;
                align-items: center;
                padding: 10px;
                transition: padding-left 0.3s ease, background-color 0.3s ease;
                text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
            }

            .sidebar .nav-link i {
                font-size: 1.5rem;
                width: 30px;
                text-align: center;
            }

            .sidebar .nav-link:hover {
                background: rgba(11, 11, 215, 0.5);
                border-radius: 5px;
            }

            .cart-title {
                font-family: 'Playfair Display', serif;
                font-size: 2.5rem;
                color: #003f7d;
                text-align: center;
                margin-top: 20px;
            }

            .cart-item {
                background-color: #ffffff;
                border-radius: 8px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                display: flex;
                padding: 20px;
                margin-bottom: 20px;
            }

            .cart-item img {
                width: 100px;
                height: 100px;
                object-fit: cover;
                border-radius: 8px;
                margin-right: 20px;
            }

            .cart-item-details {
                flex-grow: 1;
            }

            .cart-item-name {
                font-size: 1.5rem;
                color: #343a40;
                font-weight: 600;
            }

            .cart-item-price {
                font-size: 1.2rem;
                color: #007bff;
                margin-top: 10px;
            }

            .checkout-button {
                background-color: #003f7d;
                color: #fff;
                border: none;
                padding: 10px 15px;
                border-radius: 5px;
                font-size: 1.2rem;
                transition: background-color 0.3s ease;
            }

            .checkout-button:hover {
                background-color: #002952;
            }

            .empty-cart {
                text-align: center;
                font-size: 1.5rem;
                color: #888;
            }

            .back-to-dashboard {
                display: block;
                text-align: center;
                margin-top: 30px;
                font-size: 1.2rem;
                color: #007bff;
                text-decoration: none;
            }

            .back-to-dashboard:hover {
                text-decoration: underline;
            }
            .checkout-container {
        position: fixed; /* Keeps the button fixed as you scroll */
        top: 20px; /* Adjust distance from the top */
        right: 20px; /* Adjust distance from the right */
        z-index: 1001; /* Ensures it appears above other elements */
    }

    .checkout-button {
        background-color: #1d8ce6;
        color: #fff;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        font-size: 1.2rem;
        transition: background-color 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .checkout-button:hover {
        background-color: #110909;
    }
    .checkout-button i {
        margin-right: 5px; /* Adds spacing between the icon and text */
        font-size: 1.2rem; /* Adjust icon size */
    }
        </style>
    </head>

    <body>

        <!-- Sidebar -->
        <nav class="sidebar">
            <a class="navbar-brand" href="/clientdashboard">
                <i class="fas fa-hand-holding-water me-3"></i><span>Pure Flow</span>
            </a>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/clientdashboard"><i class="fas fa-tachometer-alt"></i><span> Dashboard</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/cart"><i class="fas fa-shopping-cart"></i><span> Cart</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/order-history"><i class="fas fa-history"></i><span> Order History</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/profile"><i class="fas fa-user-circle"></i><span> Profile</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout"><i class="fas fa-door-open"></i><span> Logout</span></a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="container">
            <h2 class="cart-title">Your Cart</h2>
            <% if (cart && cart.length > 0) { %>
                <form action="/checkout" method="POST">
                    <div class="cart-items">
                        <% cart.forEach(function(item) { %>
                            <div class="cart-item">
                                <input type="checkbox" name="selectedItems" value="<%= item._id %>" class="cart-checkbox">
                                <% if (item.image) { %>
                                    <img src="data:image/jpeg;base64,<%= item.image %>" alt="<%= item.name %>">
                                <% } else { %>
                                    <img src="/path/to/default-image.jpg" alt="<%= item.name %>">
                                <% } %>
                                <div class="cart-item-details">
                                    <div class="cart-item-name"><%= item.name %></div>
                                    <div class="cart-item-price">â‚±<%= item.price.toFixed(2) %></div>
                                    <div class="cart-item-quantity">
                                        Quantity: <%= item.quantity %>
                                    </div>
                                    <div class="quantity-buttons">
                                        <button type="button" onclick="editQuantity('<%= item._id %>')">
                                            <i class="fas fa-edit"></i> Edit
                                        </button>
                                        <button type="button" onclick="removeFromCart('<%= item._id %>')">
                                            <i class="fas fa-trash-alt"></i> Remove
                                        </button>
                                    </div>
                                </div>
                                <div class="cart-item-actions">
                                    <button type="button" class="remove-button" onclick="removeFromCart('<%= item._id %>')">
                                        <i class="fas fa-trash-alt"></i> Remove Item
                                    </button>
                                </div>
                            </div>
                        <% }) %>
                    </div>
    
                    <button type="submit" class="checkout-button">Proceed to Checkout</button>
                </form>
            <% } else { %>
                <p class="empty-cart">Your cart is empty.</p>
            <% } %>
    

        </div>
    
        <script>
            function editQuantity(productId) {
                const url = `/edit-quantity?productId=${productId}`;
                window.location.href = url;
            }
    
            function removeFromCart(productId) {
                fetch('/remove-from-cart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ productId: productId }),
                })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Failed to remove item from cart.');
                    }
                })
                .catch(error => console.error('Error:', error));
            }
        </script>

    </body>

    </html>
